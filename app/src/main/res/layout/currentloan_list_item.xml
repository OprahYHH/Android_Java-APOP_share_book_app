<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- don't remove this layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/border_btn_white"
        android:backgroundTint="#FFFFFF"
        android:elevation="2dp"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgBookCover"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/imgBookCover"
                android:maxHeight="110dp"
                android:src="@drawable/cover00"
                tools:ignore="ImageContrastCheck" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">
                <!-- book title -->
                <TextView
                    android:id="@+id/txtBookTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_gray"
                    android:textSize="15sp"
                    android:textStyle="bold" />
                <!-- book author -->
                <TextView
                    android:id="@+id/txtBookAuthor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    tools:ignore="TextContrastCheck" />

                <!-- book category -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtBookPublisher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/gray"
                        android:textSize="13sp"
                        tools:ignore="TextContrastCheck" />

                    <TextView
                        android:id="@+id/txtBookYear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/gray"
                        android:textSize="13sp"
                        tools:ignore="TextContrastCheck" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtBookIsbn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="2dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textColor="@color/navy"
                    android:textSize="13sp"
                    tools:ignore="TextContrastCheck" />
                <!-- user borrowing -->
                <TextView
                    android:id="@+id/txtBookOwner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/dark_blue"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:drawableStartCompat="@drawable/ic_person"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!-- borrowing time -->

                <TextView
                    android:id="@+id/labelDateBorrowed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dateBorrowed"
                    android:textColor="@color/dark_gray"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtTimeSpent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:textSize="12sp"
                    tools:ignore="TextContrastCheck" />

                <TextView
                    android:id="@+id/labelReturnDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/returnDate"
                    android:textColor="@color/dark_gray"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtReturnDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:textSize="12sp"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>