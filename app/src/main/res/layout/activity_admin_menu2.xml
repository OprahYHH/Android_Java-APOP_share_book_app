<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentEnd="false"
    android:layout_centerVertical="false"
    android:background="@drawable/light_background"
    android:orientation="vertical"
    tools:ignore="SpeakableTextPresentCheck,DuplicateSpeakableTextCheck">

    <!-- Tool Bar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green_light"
        android:elevation="10dp"
        app:navigationIcon="@drawable/ic_home">
        <!-- page title -->
        <TextView
            android:id="@+id/txtAdminMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/txtAdminMenu"
            android:textColor="@color/dark_gray"
            android:textSize="20sp"
            android:textStyle="bold" />
        <!-- message icon -->
        <ImageButton
            android:id="@+id/btnMessageIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:background="@drawable/ic_message_icon"
            android:contentDescription="@string/imgMessageIcon"
            android:minWidth="24dp"
            android:minHeight="24dp"
            tools:ignore="SpeakableTextPresentCheck,DuplicateSpeakableTextCheck,TouchTargetSizeCheck" />
    </androidx.appcompat.widget.Toolbar>

    <!--The main button of add book and update book-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnCreateUser"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/border_btn_white"
            android:backgroundTint="@color/bright_blue"
            android:drawableEnd="@drawable/ic_add"
            android:drawableTint="@color/white"
            android:elevation="20dp"
            android:gravity="start|center_vertical"
            android:padding="20dp"
            android:text="@string/txtAdminCreateUser"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:targetApi="m" />

        <Button
            android:id="@+id/btnUpdateUser"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/border_btn_white"
            android:backgroundTint="@color/dark_blue"
            android:drawableEnd="@drawable/ic_person"
            android:drawableTint="@color/white"
            android:elevation="20dp"
            android:gravity="start|center_vertical"
            android:padding="20dp"
            android:text="@string/txtUpdateUser"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:targetApi="m" />


        <Button
            android:id="@+id/btnMsgUser"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/border_btn_white"
            android:backgroundTint="@color/navy"
            android:drawableEnd="@drawable/ic_person"
            android:drawableTint="@color/white"
            android:elevation="20dp"
            android:gravity="start|center_vertical"
            android:padding="20dp"
            android:text="@string/txtMsgUser"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:targetApi="m" />

        <Button
            android:id="@+id/btnDeleteUser"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/border_btn_white"
            android:backgroundTint="#E80606"
            android:drawableEnd="@drawable/ic_person"
            android:drawableTint="@color/white"
            android:elevation="20dp"
            android:gravity="start|center_vertical"
            android:padding="20dp"
            android:text="@string/txtDelUser"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:targetApi="m" />

            <Button
            android:id="@+id/btnLogOut"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/border_btn_white"
            android:backgroundTint="@color/dark_gray"
            android:drawableEnd="@drawable/ic_login"
            android:drawableTint="@color/white"
            android:elevation="20dp"
            android:gravity="start|center_vertical"
            android:padding="20dp"
            android:text="@string/btnSignOut"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:targetApi="m" />

    </LinearLayout>
</LinearLayout>